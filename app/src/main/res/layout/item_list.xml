<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_base_country"
                android:src="@drawable/ic_image_default"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        <TextView
                android:id="@+id/name_country"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="United States Dollar (USD)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/image_base_country"
                android:layout_toRightOf="@+id/image_base_country"/>
        <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/value_base_currency"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="US$ 12,00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <view android:layout_width="match_parent"
          android:background="@color/colorPrimaryLight"
          android:layout_height="1dp"/>
</LinearLayout>